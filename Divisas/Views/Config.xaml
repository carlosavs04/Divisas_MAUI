<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Divisas.Views.Config"
             Title="Configuración">
             <ScrollView Background="{AppThemeBinding Dark=Black, Light=White}">
                <VerticalStackLayout>
                    <Label Margin="20,20,0,0"
                        Text="Configuración"
                        FontSize="18"
                        TextColor="Gray"/>
                    <HorizontalStackLayout
                        Margin="20,10"
                        Spacing="200">
                    <Label 
                        Text="Cambiar tema"
                        Margin="0,5"
                        FontSize="16"/>
                        <Switch 
                            x:Name="themeSwitch"
                            Toggled="OnThemeSwitch"
                            ThumbColor="DodgerBlue"/>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout
                            Margin="20,10"
                            Spacing="170">
                        <Label 
                            Text="Moneda base"
                            FontSize="16"
                            Margin="0,5"/>
                        <Picker x:Name="currencyPicker"
                            Title="Moneda"
                            ItemsSource="{Binding currencies}"
                            ItemDisplayBinding="{Binding Code}">
                        </Picker>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
             </ScrollView>
</ContentPage>