<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Divisas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Divisas"
    Shell.FlyoutBehavior="Disabled"
    Title="Divisas">

    <TabBar Shell.TabBarBackgroundColor="Transparent" Shell.TabBarTitleColor="#000" Shell.TabBarUnselectedColor="DarkGray" Shell.TabBarForegroundColor="#000">
        <Tab Title="Divisas" Icon="dollar.png"> 
            <ShellContent 
                          ContentTemplate="{DataTemplate local:Views.CurrenciesList}"/>
        </Tab>        
        <Tab Title="Inicio" Icon="home.png">
            <ShellContent 
                          ContentTemplate="{DataTemplate local:Views.Home}"/>
        </Tab>
        <Tab Title="Menu" Icon="bars.png">
            <ShellContent 
                          ContentTemplate="{DataTemplate local:Views.Config}"/>
        </Tab> 
    </TabBar>
</Shell>
