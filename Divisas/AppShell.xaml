<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Divisas.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Divisas"
    Shell.FlyoutBehavior="Disabled"
    Title="Divisas">

    <TabBar 
        Shell.TabBarBackgroundColor="{AppThemeBinding Dark=Black, Light=White}"
        Shell.TabBarTitleColor="{AppThemeBinding Dark=White, Light=Black}"
        Shell.TabBarUnselectedColor="DarkGray"
        Shell.TabBarForegroundColor="{AppThemeBinding Dark=White, Light=Black}">
        <Tab Title="Divisas" Icon="dollar.png" x:Name="currenciesTab" />
        <Tab Title="Inicio" Icon="home.png" x:Name="homeTab" />
        <Tab Title="Menu" Icon="bars.png" x:Name="configTab" />
    </TabBar>
</Shell>
